<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_body_width"
    android:layout_height="@dimen/dialog_body_height"
    android:background="@drawable/dialog_common_background"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/dialog_multi_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="20dp"
        android:textColor="#030303"
        android:textSize="@dimen/app_top_bar_title_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_multi_text_title"
        android:layout_centerInParent="true"
        android:paddingLeft="30dp"
        android:paddingTop="14dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/dialog_multi_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030303"
            android:textSize="@dimen/app_text_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/dialog_multi_view_division"
        android:layout_width="0.5px"
        android:layout_height="0.5px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/dialog_multi_button_confirm"
        style="@style/CustomBlueButton"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/dialog_multi_view_division"
        android:background="@drawable/dialog_button_common_background"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/dialog_multi_buttom_cancel"
        style="@style/CustomBlueButton"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/dialog_multi_view_division"
        android:background="@drawable/dialog_button_common_background_blue"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#427efe"
        android:textSize="14sp" />

</RelativeLayout>


